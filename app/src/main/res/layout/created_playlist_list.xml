<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/musictrack"
    >

    <RelativeLayout
        android:id="@+id/rlPlaylistLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        >

        <ImageView
            android:id="@+id/ivPlaylistImage"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/fav"
            android:layout_marginStart="@dimen/_10sdp"
            android:padding="@dimen/_5sdp"
            android:layout_centerVertical="true"

            />

        <TextView
            android:id="@+id/tvPlaylistText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Playlist"
            android:textColor="@color/white"
            android:layout_toEndOf="@+id/ivPlaylistImage"
            android:layout_marginStart="@dimen/_15sdp"
            android:textSize="@dimen/_12ssp"
            android:layout_marginTop="@dimen/_5sdp"
            />

        <TextView
            android:id="@+id/tvPlaylistSongsCount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Count"
            android:textColor="@color/countTxt"
            android:layout_toEndOf="@+id/ivPlaylistImage"
            android:layout_marginStart="@dimen/_15sdp"
            android:textSize="@dimen/_8ssp"
            android:layout_below="@+id/tvPlaylistText"
            />

    </RelativeLayout>

</RelativeLayout>