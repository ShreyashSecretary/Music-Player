<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:bottom="-2dp"
        android:left="-2dp"
        android:right="-2dp"
        android:top="1dp">
        <shape android:shape="rectangle">
            <solid android:color="@color/musictrack" />
            <!--<stroke
                android:width="1dp"
                android:color="@color/Divider" />-->
            <padding
                android:bottom="5dp"
                android:left="5dp"
                android:right="5dp"
                android:top="5dp" />

            <corners android:topLeftRadius="@dimen/_20sdp"
                android:topRightRadius="@dimen/_20sdp"/>
        </shape>
    </item>
</layer-list>

